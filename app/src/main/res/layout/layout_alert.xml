<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="100dp"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/alertInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#000000"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/alertDialogTestBtn"
            android:background="#FFFFFF"
            android:drawableStart="@drawable/ic_test_blue_24dp"
            android:text="Test"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/alertDialogDeleteBtn"
            android:background="#FFFFFF"
            android:drawableStart="@drawable/ic_delete_red_24dp"
            android:text="Delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/alertDialogCancelBtn"
            android:background="#FFFFFF"
            android:drawableStart="@drawable/ic_cancel_red_24dp"
            android:text="Cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
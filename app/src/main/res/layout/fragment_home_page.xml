<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="xyz.zagermonitoring.nodmcu_setup.HomePage">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:text="Your Devices"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <ListView
            android:id="@+id/deviceListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/textView2"
            android:background="@color/white"
            android:visibility="visible" />


        <TextView
            android:id="@+id/txtView_noDevices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="You don't have any devices yet. Press the plus button at the bottom while in range of your device to get started setting up a device. "
            android:textColor="#000000"
            android:textSize="24sp" />




    </RelativeLayout>
</FrameLayout>